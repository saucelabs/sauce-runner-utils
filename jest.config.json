{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/unit/**/*.[jt]s?(x)"],
    "collectCoverageFrom": ["src/**/*.[jt]s"],
    "collectCoverage": true,
    "coverageThreshold": {
        "global": {
            "branches": 60,
            "functions": 76,
            "lines": 76,
            "statements": 76
        }
    }
}
